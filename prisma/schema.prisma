generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum CourseType {
  JAVA_SCRIPT
  TYPE_SCRIPT
}

model Course {
  id      Int      @id @default(autoincrement())
  name    CourseType
  lessons Lesson[]
}

model Lesson {
  id       Int     @id @default(autoincrement())
  question String
  course   Course  @relation(fields: [courseId], references: [id])
  courseId Int
}
